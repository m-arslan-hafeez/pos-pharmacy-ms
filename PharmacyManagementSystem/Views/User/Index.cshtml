@model IEnumerable<PharmacyManagementSystem.Models.User_Information>

@{
    ViewBag.Title = "Index";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Dashboard/StaffDashboard'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<h2>&nbspList of Users</h2>

<hr width="99%">

<p>
    &nbsp&nbsp
    @Html.ActionLink("Create New", "Create")
</p>


<table border="1" cellpadding="3" style="margin-top:10px; margin-left:10px;">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Gender
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            Age
        </th>
        <th>
            Address
        </th>
        <th>
            Contact
        </th>
        <th>
            Blood Group
        </th>
        <th>
            Marital Status
        </th>
        <th>
            Joining Date
        </th>
        <th>
            Salary
        </th>
        <th>
            Username
        </th>
        <th>
            Password
        </th>
        <th>
            Usertype
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd-MM-yyyy}", item.Date_of_Birth))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blood_Group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marital_Status)
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd-MM-yyyy}", item.Join_Date))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Access.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Access.Usertype)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID, username = item.User_Access.Username }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID, username = item.User_Access.Username })
            </td>
        </tr>
    }

</table>
