@model PharmacyManagementSystem.Models.Supplier

@{
    ViewBag.Title = "Delete";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Supplier/Index'</script>");

        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<div>
    <h2>&nbspDelete Supplier Details</h2>

    <hr width="99%">

    <h3>&nbsp&nbspAre you sure you want to delete this?</h3>
</div>

<table border="1" cellpadding="10" style="margin-top:30px; margin-left:10px; margin-right:10px;margin-bottom:30px">

    <tr>
        <td>Supplier Name</td>
        <td> @Html.DisplayFor(model => model.Supplier_Name)</td>
    </tr>

    <tr>
        <td>Contact</td>
        <td> @Html.DisplayFor(model => model.Contact)</td>
    </tr>
    <tr>
        <td>Email</td>
        <td> @Html.DisplayFor(model => model.Email)</td>
    </tr>

</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" style=" height:29px; width:100px; margin:0px 10px 30px 10px " />
}

<div>
    &nbsp @Html.ActionLink("Back to List", "Index")
</div>

