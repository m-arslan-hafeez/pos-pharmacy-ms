@model PharmacyManagementSystem.Models.Batch

@{
    ViewBag.Title = "Delete";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Stock/Index'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<div>
    <h2>&nbspDelete Batch Details</h2>

    <hr width="99%">

    <h3>&nbsp&nbspAre you sure you want to delete this?</h3>
</div>

<table border="1" cellpadding="10" style="margin-top:30px; margin-left:10px; margin-right:10px;margin-bottom:20px">

    <tr>
        <td>Medicine Name</td>
        <td> @Html.DisplayFor(model => model.Medicine_Information.Medicine_Name)</td>
    </tr>

    <tr>
        <td>Batch ID</td>
        <td> @Html.DisplayFor(model => model.Batch_ID)</td>
    </tr>

    <tr>
        <td>Quantity</td>
        <td> @Html.DisplayFor(model => model.Quantity)</td>
    </tr>

    <tr>
        <td>Cost Price</td>
        <td> @Html.DisplayFor(model => model.Cost_Price)</td>
    </tr>

    <tr>
        <td>Sell Price</td>
        <td> @Html.DisplayFor(model => model.Sell_Price)</td>
    </tr>

    <tr>
        <td>Production Date</td>
        <td> @Html.DisplayFor(model => model.Production_Date)</td>
    </tr>

    <tr>
        <td>Expire Date</td>
        <td>  @Html.DisplayFor(model => model.Expire_Date)</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" style=" height:29px; width:100px; margin:0px 10px 30px 10px " />
}

<div>
    &nbsp @Html.ActionLink("Back to List", "Index")
</div>

