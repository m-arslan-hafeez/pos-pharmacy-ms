@model PharmacyManagementSystem.Models.Batch

@{
    ViewBag.Title = "Edit";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Stock/Index'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<h2>&nbspEdit Batch Information</h2>

<hr width="99%">


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table cellspacing="40">

        <tr align="right">
            <td>Batch ID</td>
            <td>
                @Html.TextBoxFor(model => model.Batch_ID, new { style = "width:300px; height:25px; font-size: 16px;", @readonly = "readonly" })
            </td>
        </tr>
        <tr align="right">
            <td>Sell Price</td>
            <td>
                @Html.TextBoxFor(model => model.Sell_Price, new { style = "width:300px; height:25px; font-size: 16px;" })
            </td>
            <td align="left">@Html.ValidationMessageFor(model => model.Sell_Price, null, new { style = "color:red" })</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Update" style="width:100px; height:35px;" /></td>
        </tr>

    </table>

   
}

<div>
    &nbsp; @Html.ActionLink("Back to List", "Index")
</div>
<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
