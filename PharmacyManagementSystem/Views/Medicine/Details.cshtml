@model PharmacyManagementSystem.Models.Medicine_Information

@{
    ViewBag.Title = "Details";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutStaff.cshtml";
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}


<h2>&nbspMedicine Details</h2>

<hr width="99%">


<table border="1" cellpadding="10" style="margin-top:30px; margin-left:10px; margin-right:10px;margin-bottom:30px">

    <tr>
        <td>Medicine Name</td>
        <td> @Html.DisplayFor(model => model.Medicine_Name)</td>
    </tr>

    <tr>
        <td>Category</td>
        <td> @Html.DisplayFor(model => model.Category)</td>
    </tr>
    <tr>
        <td>Generic Name</td>
        <td> @Html.DisplayFor(model => model.Drug_Generic_name.Genric_Name)</td>
    </tr>
    <tr>
        <td>Manufacturer</td>
        <td> @Html.DisplayFor(model => model.Manufacturer.Manufacturer_Name)</td>
    </tr>

</table>

<p>
    &nbsp&nbsp  @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
